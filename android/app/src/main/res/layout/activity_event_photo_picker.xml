<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fitsSystemWindows="true">


    <!-- Event Info -->
    <LinearLayout
        android:id="@+id/layout_event_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/outfit_semibold" />

        <TextView
            android:id="@+id/tv_event_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Dates"
            android:textSize="12sp"
            android:textColor="#64748b"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/outfit_regular" />

        <!-- Photo Count Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_photo_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 photos"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:fontFamily="@font/outfit_regular" />

            <TextView
                android:id="@+id/tv_selected_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 selected"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:fontFamily="@font/outfit_regular" />

        </LinearLayout>

    </LinearLayout>

    <!-- Photo Grid Container with Loading Overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <!-- Photo Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_photos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3" />
        
        <!-- iOS-style Loading Overlay - VISIBLE BY DEFAULT for instant feedback -->
        <LinearLayout
            android:id="@+id/loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#E6000000"
            android:visibility="visible">
            
            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="#C084FC" />
            
            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking for duplicates..."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/outfit_semibold" />
                
        </LinearLayout>
        
    </FrameLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#ffffff"
        android:elevation="4dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#020817"
            android:textSize="14sp"
            android:background="@drawable/secondary_button_background"
            android:fontFamily="@font/outfit_medium"
            android:layout_marginEnd="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:stateListAnimator="@null"
            android:elevation="0dp" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Select Photos"
            android:textColor="#020817"
            android:textSize="14sp"
            android:background="@drawable/secondary_button_background"
            android:fontFamily="@font/outfit_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>