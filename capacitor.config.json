{
  "appId": "app.photoshare",
  "appName": "PhotoShare",
  "webDir": "www",
  "server": {
    "url": "https://photoshare.ai",
    "cleartext": false
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "plugins": {
    "Device": {
      "permissions": ["android.permission.READ_PHONE_STATE"]
    },
    "Camera": {
      "permissions": ["camera", "photos"]
    },
    "BarcodeScanner": {
      "cameraDirection": "back"
    },
    "EventPhotoPicker": {
      "enabled": true
    },
    "AppPermissions": {
      "enabled": true
    },
    "FirebaseAuthentication": {
      "skipNativeAuth": false,
      "providers": ["google.com"]
    },
    "ImageCropper": {
      "enabled": true
    },
    "SafeArea": {
      "enabled": false,
      "customColorsForSystemBars": true,
      "statusBarColor": "#00000000",
      "statusBarContent": "light",
      "navigationBarColor": "#00000000",
      "navigationBarContent": "light",
      "offset": 0
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#1a1d29",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#999999",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "NativeGallery": {
      "enabled": true
    }
  },
  "packageClassList": [
    "app.photoshare.EventPhotoPickerPlugin",
    "app.photoshare.AppPermissionsPlugin", 
    "app.photoshare.AutoUploadPlugin",
    "app.photoshare.EnhancedCameraPlugin",
    "app.photoshare.CameraPreviewReplacementPlugin",
    "app.photoshare.NativeGalleryPlugin",
    "app.photoshare.DeepLinkRouter"
  ]
}
